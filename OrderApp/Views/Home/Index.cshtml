@model IEnumerable<OrderApp.Models.OrderViewModel>
@{
    ViewBag.Title = "Все заказы";
}

<a asp-action="Create">Добавить заказ</a>
<table class="table">
    <tr>
        <td>
            <a asp-action="Index" asp-route-sortOrder="@ViewBag.IdSort">
                № заказа
            </a>
        </td>
        <td>
            <a asp-action="Index" asp-route-sortOrder="@ViewBag.FromCitySort">
                Город отправителя
            </a>
        </td>
        <td>
            <a asp-action="Index" asp-route-sortOrder="@ViewBag.FromAdressSort">
                Адрес отправителя
            </a>
        </td>
        <td>
            <a asp-action="Index" asp-route-sortOrder="@ViewBag.ToCitySort">
                Город получателя
            </a>
        </td>
        <td>
            <a asp-action="Index" asp-route-sortOrder="@ViewBag.ToAdressSort">
                Адрес получателя
            </a>
        </td>
        <td>
            <a asp-action="Index" asp-route-sortOrder="@ViewBag.WeightSort">
            Вес груза, кг
            </a>
        </td>
        <td>
            <a asp-action="Index" asp-route-sortOrder="@ViewBag.DateSort">
            Дата забора груза
            </a>
        </td>
    </tr>
    @foreach (var item in Model)
    {
        <tr><td>@item.Id</td><td>@item.FromCity</td><td>@item.FromAdress</td><td>@item.ToCity</td><td>@item.ToAdress</td><td>@item.Weight</td><td>@item.Date</td>
        <td>|
            <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id"
               onclick="return confirm('Вы уверены, что хотите удалить заказ : @item.Id')">Удалить</a>
        </td></tr>
    }
</table>
